<%- include("partials/header.ejs") %>

<div class="container">
  <h1 class="mb-3">Blog Posts</h1>
  <a href="/new-post"><button type="button" class="btn btn-outline-primary mb-3">New Post</button></a>

<% if (posts.length > 0) { %>
  <% for (let i = posts.length - 1; i >= 0; i--) {%>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= posts[i].title %></h5>
        <p class="card-text"><%= posts[i].content %></p>
        <a href="/edit-post/<%= posts[i].id %>"><button type="button" class="btn btn-primary">Edit</button></a>
        <form action="/delete-post/<%= posts[i].id %>" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  <% }; %>
<%} else { %>
  <p>No posts yet. Be the first to create one!</p> 
<%} %>
</div>

<%- include("partials/footer.ejs") %>